<h1>Listing cars for <%= current_user.display_name %></h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Vin</th>
      <th>License state</th>
      <th>License number</th>
      <th>Location</th>
      <th>Model Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.user.display_name %></td>
        <td><%= car.vin %></td>
        <td><%= car.license_state %></td>
        <td><%= car.license_number %></td>
        <td><%= car.location_id %></td>
        <td><%= car.model_description %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

